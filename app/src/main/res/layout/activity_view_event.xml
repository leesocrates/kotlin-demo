<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <cn.example.myapplication.view.MyEventLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.example.myapplication.view.ParentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="textView" />

            <cn.example.myapplication.view.BaseView
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <cn.example.myapplication.view.MyButton
                android:id="@+id/myBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_ccc"
                android:text="myButton" />
        </cn.example.myapplication.view.ParentLinearLayout>
    </cn.example.myapplication.view.MyEventLinearLayout>


</LinearLayout>