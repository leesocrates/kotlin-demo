<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animator_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_drawable"/>

    <TextView
        android:id="@+id/animator_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello animator"/>

    <TextView
        android:id="@+id/animator_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test Object animator"/>

    <TextView
        android:id="@+id/animator_propertyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test PropertyValues animator"/>


    <TextView
        android:id="@+id/animator_valueAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test  valueAnimator"/>

    <TextView
        android:id="@+id/animator_animateMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test animate method animator"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animator_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>